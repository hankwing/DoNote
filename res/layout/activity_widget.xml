<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#cccccc"
        android:gravity="center"
        android:text="DoNote"
        android:textSize="21sp" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1.0"
            android:gravity="center" >

            <ImageView
                android:id="@+id/Wid_back_green"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/widget_back_green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1.0"
            android:gravity="center" >

            <ImageView
                android:id="@+id/Wid_back_gray"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/widget_back_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1.0"
            android:gravity="center" >

            <ImageView
                android:id="@+id/Wid_back_red"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/widget_back_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1.0"
            android:gravity="center" >

            <ImageView
                android:id="@+id/Wid_back_blue"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/widget_back_blue" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/widget_list"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:fastScrollEnabled="true" >
        </ListView>
    </LinearLayout>

</LinearLayout>