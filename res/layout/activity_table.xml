<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#af76BBD8"
         >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/table_edit"
            android:textColor="#fffafa"
            android:textSize="21sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/RelativeLayout2" />

    <RelativeLayout
        android:id="@+id/RelativeLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view2" >

        <EditText
            android:id="@+id/table_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="8dp"
            android:background="@null"
            android:ellipsize="end"
            android:ems="10"
            android:hint="@string/hint_title"
            android:singleLine="true" >
        </EditText>

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/RelativeLayout3" />
    
         
    <TextView
        android:layout_width="fill_parent"
        android:layout_marginLeft="25dp"
        android:layout_height="2dp"
        android:layout_below="@+id/view1"
        android:layout_centerHorizontal="true"
        android:background="#4169e1" />

    <ScrollView
        android:id="@+id/scroll_table"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/view1" >

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/tableView"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TableLayout
                    android:id="@+id/tableNote"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:stretchColumns="*" >
                </TableLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

    <LinearLayout
        android:id="@+id/edit_table"
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#7f404E4D"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/table_add"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1.0"
            android:background="@drawable/popupwindow_button"
            android:textColor="#ffffff"
            android:text="@string/add" />

        <Button
            android:id="@+id/table_delete"
           android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1.0"
            android:background="@drawable/popupwindow_button"
            android:textColor="#ffffff"
            android:text="@string/delete" />

        <Button
            android:id="@+id/table_save"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1.0"
            android:background="@drawable/popupwindow_button"
            android:textColor="#ffffff"
            android:text="@string/save"/>

    </LinearLayout>

</RelativeLayout>