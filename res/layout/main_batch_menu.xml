<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:background="#7f404E4D"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/batch_delete"
        android:layout_width="160dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:background="@drawable/popupwindow_button"
        android:layout_height="40dp"
        android:src="@drawable/ic_main_batch_delete" />

    <ImageButton
        android:id="@+id/batch_move"
        android:layout_width="160dp"
        android:scaleType="centerInside"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/popupwindow_button"
        android:src="@drawable/ic_main_batch_move" />

    <ImageButton
        android:id="@+id/batch_lock"
        android:layout_width="160dp"
        android:background="@drawable/popupwindow_button"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:layout_weight="1"
        android:src="@drawable/ic_main_batch_lock" />
    
    <ImageButton
        android:id="@+id/batch_unlock"
        android:layout_width="160dp"
        android:scaleType="centerInside"
        android:background="@drawable/popupwindow_button"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:src="@drawable/ic_main_batch_unlock" />

</LinearLayout>