<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/imagehandle_main"
    android:layout_height="fill_parent"
    android:background="#ffcccccc"
    android:orientation="vertical" >
	
    <include layout="@layout/layout_imagehandler_title" />

    <WebView
        android:id="@+id/WV_View"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0" />

    <LinearLayout
        android:id="@+id/LL_ToolBar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#af808080"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/IB_RotateLeft"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:background="@drawable/menu_button"
            android:scaleType="centerInside"
            android:src="@drawable/rotate_left" />

        <ImageButton
            android:id="@+id/IB_RotateRight"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:background="@drawable/menu_button"
            android:scaleType="centerInside"
            android:src="@drawable/rotate_right" />

        <ImageButton
            android:id="@+id/IB_Crop"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:background="@drawable/menu_button"
            android:scaleType="centerInside"
            android:src="@drawable/crop" />
        
        <ImageButton
            android:id="@+id/handle_more"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:background="@drawable/menu_button"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more" />
    </LinearLayout>

</LinearLayout>