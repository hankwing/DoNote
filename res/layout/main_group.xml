<?xml version="1.0" encoding="utf-8"?>
<com.donote.util.RefreshableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/groupRefreshLinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.donote.util.GroupListView
        android:id="@+id/home_expandableListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="0.0dip"
        android:cacheColorHint="#00000000"
        android:divider="#1f000000"
		android:dividerHeight="1px"
        android:choiceMode="singleChoice"
        android:drawSelectorOnTop="false"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="true"
        android:groupIndicator="@null"
        android:scrollbars="vertical"
        android:scrollingCache="true" />

</com.donote.util.RefreshableLinearLayout>