<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/display_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/beijing2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".CommonEdit" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="41dp"
        android:background="#af76BBD8" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true" />

        <ImageButton
            android:id="@+id/display_return"
            android:layout_width="37dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/textview_button"
            android:scaleType="centerInside"
            android:src="@drawable/edit_return" />

        <TextView
            android:id="@+id/display_catagory_textview"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/display_return"
            android:gravity="center"
            android:text="@string/default_group"
            android:textColor="#fffafa"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/edit_more"
            android:layout_width="54dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/textview_button"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more" />
    </RelativeLayout>

    <TextView
        android:id="@+id/display_title"
        style="@style/normalText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:background="#00000000"
        android:ellipsize="end"
        android:ems="10"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/display_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:background="#7f4169e1" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/display_title"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/display_body"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scrollbars="vertical" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#af808080"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/display_edit"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:scaleType="centerInside"
            android:src="@drawable/dis_draw" /> 

        <ImageButton
            android:id="@+id/display_add_alarm"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:scaleType="centerInside"
            android:src="@drawable/ic_display_add_alarm" />

        <ImageButton
            android:id="@+id/display_delete"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:scaleType="centerInside"
            android:src="@drawable/ic_display_delete" />

        <ImageButton
            android:id="@+id/display_share"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:scaleType="centerInside"
            android:src="@drawable/ic_display_share" />

        <!--
             <ImageButton
            android:id="@+id/audio_read"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/ic_audio_read" />
        -->

    </LinearLayout>

</RelativeLayout>