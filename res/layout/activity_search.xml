<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:id="@+id/main_search"
    android:background="@drawable/beijing2"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="#af76BBD8" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.14"
            android:paddingLeft="35dp"
            android:paddingTop="5dp"
            android:textColor="#fffafa"
            android:textSize="20dp" />
        
        <ImageButton
            android:id="@+id/search_return"
            android:layout_width="37dp"
            android:layout_height="fill_parent"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:background="@drawable/textview_button"
            android:src="@drawable/edit_return" />

        <EditText
            android:id="@+id/search_note"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:hint="@string/hint_input_keys"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:ems="10" />

        <ImageButton
            android:id="@+id/search_confirm"
            android:layout_width="43dp"
            android:layout_height="fill_parent"
            android:scaleType="centerInside"
            android:layout_alignTop="@+id/search_return"
            android:layout_toRightOf="@+id/search_note"
            android:background="@drawable/textview_button"
            android:src="@drawable/ic_query" />
    </RelativeLayout>
    
     <ListView
         android:id="@+id/search_list"
         android:layout_width="wrap_content"
         android:cacheColorHint="#00000000"
         android:layout_height="fill_parent"
         android:layoutAnimation="@anim/list_anim_layout" />
     
     <TextView 
         android:id="@+id/search_empty"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="18sp" 
		
		android:paddingLeft="8dp" />
 
</TableLayout>