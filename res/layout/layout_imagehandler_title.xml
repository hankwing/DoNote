<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:background="#af76BBD8"
    android:drawingCacheQuality="high" >
    
    <ImageButton
            android:id="@+id/IB_LogoImg"
            android:layout_width="37dp"
            android:layout_height="fill_parent"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:background="@drawable/textview_button"
            android:src="@drawable/edit_return" />
    
    <ImageButton
            android:id="@+id/IB_Function"
            android:layout_width="54dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"  
            android:background="@drawable/textview_button"
            android:src="@drawable/imagehandler_confirm" />

    
    <ProgressBar
        android:id="@+id/PB_ProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="38dip"
        android:layout_height="38dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:indeterminateDrawable="@drawable/imagehandler_confirm"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/SP_Select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/IB_Function"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/IB_LogoImg"
        android:background="@drawable/imagehandler_confirm"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/iamgeHandler_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/IB_Function"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@+id/IB_LogoImg"
        android:text="@string/image_edit"
        android:textColor="#fffafa"
        android:textSize="18sp" />

</RelativeLayout>