<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- PopupWindow窗口淡入淡出动画 -->

    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_mini</item>
    </style>

    <style name="AnimationFade">
        <item name="android:windowEnterAnimation">@anim/animation</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@anim/checkbox_selector</item>
    </style>

    <style name="ThemeActivity" mce_bogus="1" parent="AppBaseTheme">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/back_exit</item>
    </style>

    <style name="login_button">
        <item name="android:background">@drawable/login_button</item>
    </style>

    <style name="register_button">
        <item name="android:background">@drawable/register_button</item>
    </style>

    <style name="smallText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="normalText">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="largeText">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="hugeText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="myDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>